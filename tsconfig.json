{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "newLine": "LF",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "build",
    "es",
    "lib"
  ]
}
